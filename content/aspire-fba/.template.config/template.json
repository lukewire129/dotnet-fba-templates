{
    "$schema": "http://json.schemastore.org/template",
    "author": "rkttu",
    "classifications": [ "Common", ".NET Aspire", "File-based App" ],
    "identity": "aspire-fba",
    "name": ".NET Aspire AppHost (File-based App)",
    "shortName": "aspire-fba",
    "sourceName": "Program",
    "preferNameDirectory": true,
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project (e.g., net10.0, net9.0, net8.0).",
            "datatype": "string",
            "defaultValue": "net10.0",
            "replaces": "NET_TFM"
        },
        "EnableAot": {
            "type": "parameter",
            "description": "Enable AOT compilation (Note: Aspire AppHost cannot use AOT)",
            "datatype": "bool",
            "defaultValue": "false"
        }
    }
}